@import 'base';
@import 'header';


.main {
	margin-top: 0;

	min-height: 700px;
	width: 1000px;
}

.left-container {
	float: left;
	background-color: #fff;
	margin-top: 25px;
	width: 720px;

	h1 {
		margin-top: 5px;
		font-family: 'pt sans';
	}

    article {
      text-align: justify;
    }

    img {
    	display: block;
    	width: 90%;
    	margin: 18px auto;
    }

}

.list-item {
	margin-bottom: 18px;
	overflow: hidden;

	#cover-image li {
		display: inline-block;
		margin-right: 10px;
	}

	.tags {
		list-style: none;
		padding-left: 0;

		li {
			line-height: 1.5;
			word-wrap: break-word;
			display: inline-block;			
			
			a {
				
				letter-spacing: 0.08em;
				margin: 0 10px 10px 0;
				padding: 0.25em 6px 0.25em 18px;
				background: url(<%= asset_path 'meta-tags-odd.png' %>) -10px 50% no-repeat #B6B8BA;
				color: #eee;
				font-weight: normal;
				text-decoration: none;
				@include border-radius(2px);
				font-family: "pt sans";
				font-size: 16px
			}

		}
	}

	.subtitle{
		margin: 8px 0;
		list-style: none;
		padding-left: 0;
		font-family: "pt sans";

		li {
			display: block;
			padding-left: 30px;
			text-transform: uppercase;
			letter-spacing: 0.08em;
			color: #999;
			background: url(<%= asset_path 'meta-date.png' %>) 0 50% no-repeat;
		}
	}

	h2 {
		//font-family: "crete round";
		font-style: bold;
		margin: 0;
		letter-spacing: 1px;

		a {
			color: #555;
		}

		a:hover {
			color: #ffcc33;
		}
	}


	img {
		float: right;
		width: 240px;
		margin: 0 0 0.2em 1em;
	}

	section {
		margin: 10px 0;
	}

	p {
		margin: 8px 0;
	}
}

.side-bar {
	margin-top: 35px;
	float: right;
	width: 250px;
	
	h2 {
		letter-spacing: 2px;
		font-family: "raleway";
		font-weight: bold;
		font-size: 16px;
	}


  .tag-cloud {
    li {
      display: inline-block;
      margin: 0 5px 10px 0;
    }

    a {
      background-color: #D19E29;
      padding: 2px 8px;
      color: #fff;
      border: 2px solid #fff;
      -webkit-transition: width 1s, height 1s, border-color 0.5s, background-color 1s;
      -moz-transition: width 1s, height 1s, border-color 0.5s, background 1s;
      transition: width 1s, height 1s, border-color 0.5s, background-color 1s;
    }

    a:hover {
    	//background-color: #F28022;
    	border: 2px solid #888;
    }
  }

  .side-box {
    border: solid 5px #ccc;
    padding: 10px 10px 20px 25px;
    margin-bottom: 20px;
    background-color: #fff;

    hr {
      height: 3px;
      border: 0;
      background-color: #D19E29;
      color: #D19E29;
      width: 50px;
      text-align: left;
      margin-left: 0;
      margin-bottom: 15px;

    }
  }
}

@import 'article_view';
@import 'form'

