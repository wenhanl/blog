<div class="list-item">
	<h2 class="post-title"><%= link_to article.title, article_path(article) %></h2>
	<ul class="subtitle"><li><%= article.created_at.strftime("%B %d, %Y") %></li></ul>
	<% has_image = (not article.img.nil? and article.img != 'null') %>
    <% if has_image %>
	    <img src="<%= article.img %>" width="200"/>
    <% end %>
	<section>

		<% if not article.text.nil? %>
			<% if not has_image %>
	    		<%= truncate_html(sanitize(article.text, {:tags=>['a', 'p']}), length: 400, omission: '...') %>
	    	<% else %>
	    		<%= truncate_html(sanitize(article.text, {:tags=>['a']}), length: 300, omission: '...') %>
	    	<% end %>
    	<% end %> 
	</section>

	<ul class="tags">
		<% article.tag.each do |t| %>
			<li><a href="#"><%= t.name %></a></li>
		<% end %>
	</ul>
</div>