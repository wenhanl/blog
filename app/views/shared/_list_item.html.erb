<div class="list-item">
	<h2 class="post-title"><%= link_to article.title, article_path(article) %></h2>
	<ul class="subtitle"><li><%= article.created_at.strftime("%B %d, %Y") %></li></ul>
    <% if not article.img.nil? %>
	    <img src="<%= article.img %>" width="200"/>
    <% end %>
	<p>
		<% if not article.text.nil? %>
	    	<%= article.text.gsub(/<img .*?>/i, '').html_safe %> 
    	<% end %> 
	</p>

	<ul class="tags">
		<% article.tag.each do |t| %>
			<li><a href="#"><%= t.name %></a></li>
		<% end %>
	</ul>
</div>