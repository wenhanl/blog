<%= stylesheet_link_tag 'highlight/monokai_sublime' %>
<%= javascript_include_tag 'highlight/highlight.pack'  %>
<%= javascript_include_tag 'article_view'  %>

<% @title = @article.title + ' - ' %>


<%= render 'shared/header' %>

<div class="left-container article-view-left">
    <h1><%= @article.title %></h1>

    <article><%= @article.text.html_safe %></article>


    <%= link_to 'Back', articles_path %>
</div>

<div class="side-bar article-view-right">
  <div class="side-box toc">
    <h2>INDEX</h2>

    <hr>
    <div id="toc"></div>
  </div>

  <div class="side-box">
    <h2>TAGS</h2>
    <hr>
    <ul class="tag-cloud">
      <% @article.tag.each do |t| %>
          <li><%= link_to(t.name, controller: 'tags', action: 'show', id: t.id)  %></li>
      <% end %>

    </ul>
  </div>

</div>


<%= render 'shared/footer' %>